<import src="/utils/lifecycle.axml"/>
<import src="/utils/grid/index.axml"/>
<import src="/utils/items/index.axml"/>

<view class="container" key="container">
    <view class="slogon">
        <image src="/assets/images/home/logo.png" mode="scaleToFill" class="logo"/>
        <view class="info">
            <text class="desc">智慧为健康更专业</text>
        </view>
    </view>
    <template is="grid" data="{{...arr}}"/>
</view>

<template
        is="items"
        key="items"
        data="{{hidden: hidden, list: arr.list[curIndex], onChildItemTap: arr.onChildItemTap, animMaskData, animContentData}}"
/>

<template
        key="lifecycle"
        is="lifecycle"
        a:if="{{debug}}"
/>